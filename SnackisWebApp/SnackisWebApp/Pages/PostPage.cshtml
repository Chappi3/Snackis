@page
@model SnackisWebApp.Pages.PostPageModel
@{
    ViewData["Title"] = @Model.Post.Title;
}

<div class="row text-center">
    @if (Model.CreatedByUser != null)
    {
        <div class="col-4 align-content-center">
            <p>@Model.Post.CreatedAt</p>
            @if (Model.UserId != Model.CreatedByUser.Id)
            {
                <a asp-page="/User/SendMessage" asp-route-toUserId="@Model.CreatedByUser.Id">
                    <p>@Model.CreatedByUser.UserName</p>
                </a>
            }
            else
            {
                <p>@Model.CreatedByUser.UserName</p>
            }
            @if (Model.CreatedByUser.ProfileImg != null)
            {
                <img style="width:150px;height:150px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.CreatedByUser.ProfileImg))">
            }
            else
            {
                <img style="width:150px;height:150px; object-fit:cover" src="/img/user-profile-icon.jpg">
            }
        </div>
    }
    else
    {
        <div class="col-4 align-content-center">
            <p>@Model.Post.CreatedAt</p>
            <p>Deleted user</p>
        </div>
    }
    <div class="col-8 align-content-center">
        <h3>@Model.Post.Title</h3>
        <textarea class="rounded w-100 h-75" readonly>@Model.Post.Content</textarea>
    </div>
    <div>
        <a class="btn btn-warning" asp-page="CreateReport" asp-route-PostId="@Model.Post.Id">Report</a>
    </div>
</div>

@foreach (var comment in Model.Comments.OrderBy(c => c.CreatedAt))
{
    <hr class="my-3" />
    <div class="row text-center my-2">
        @if (comment.CreatedByUser != null)
        {
            <div class="col-4 align-content-center">
                <p>@comment.CreatedAt</p>
                @if (Model.UserId != comment.CreatedByUser.Id)
                {
                    <a asp-page="/User/SendMessage" asp-route-toUserId="@comment.CreatedByUser.Id">
                        <p>@comment.CreatedByUser.UserName</p>
                    </a>
                }
                else
                {
                    <p>@comment.CreatedByUser.UserName</p>
                }
                @if (comment.CreatedByUser.ProfileImg != null)
                {
                    <img style="width: 150px; height: 150px; object-fit: cover" src="data:image/*;base64,@(Convert.ToBase64String(comment.CreatedByUser.ProfileImg))">
                }
                else
                {
                    <img style="width: 150px; height: 150px; object-fit: cover" src="/img/user-profile-icon.jpg">
                }
            </div>
        }
        else
        {
            <div class="col-4 align-content-center">
                <p>@comment.CreatedAt</p>
                <p>Deleted user</p>
            </div>
        }
        <div class="col-8 align-content-center">
            <textarea class="rounded w-100 h-75" readonly>@comment.Content</textarea>
        </div>
        <div>
            <a class="btn btn-warning" asp-page="CreateReport" asp-route-CommentId="@comment.Id">Report</a>
        </div>
    </div>
}

<div class="row text-center">
    <div class="col-12 align-content-center">
        @if (Model.UserId != null)
        {
            <form method="post" asp-page-handler="AddComment">
                <input type="hidden" asp-for="Input.UserId" value="@Model.UserId" />
                <input type="hidden" asp-for="Input.PostId" value="@Model.Post.Id" />
                <div class="form-group my-2">
                    <label class="control-label" asp-for="Input.Content"></label>
                    <textarea asp-for="Input.Content" class="form-control"></textarea>
                </div>
                <div class="input-group-btn">
                    <button class="btn btn-info">Add New Comment</button>
                </div>
            </form>
        }
        else
        {
            <p>Please <a asp-area="Identity" asp-page="Account/Login">login</a> to create a comment!</p>
        }
    </div>
</div>
