@using Microsoft.AspNetCore.Identity
@using SnackisWebApp.Models

@inject SignInManager<SnackisUser> SignInManager
@inject UserManager<SnackisUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="align-self: center;">
            <a>
                <span>
                    <i class="fas fa-comment-dots"></i>
                    <span class="badge rounded-pill bg-warning">
                        <!-- Todo: inject and call message gateway to get num of unread -->
                    </span>
                </span>
            </a>
        </li>
        <li class="nav-item" style="align-self: center;">
            <div class="dropdown">
                <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                    @if (UserManager.GetUserAsync(User).Result.ProfileImg != null)
                    {
                        <img alt="user image" style="width: 40px; height: 40px; object-fit: cover; border-radius: 30px" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfileImg))">
                    }
                    else
                    {
                        <img alt="user image" style="width: 40px; height: 40px; object-fit: cover; border-radius: 30px" src="/img/user-profile-icon.jpg">
                    }
                    Hello @UserManager.GetUserName(User)!
                </button>
                <div class="dropdown-menu justify-content-start">
                    <a id="manage" class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="User Settings">
                        <span style="font-size: 1rem;">
                            <i class="fas fa-user-cog"></i>
                        </span>
                        User Settings
                    </a>
                    @if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Admin"))
                    {
                        <a class="dropdown-item text-dark" asp-page="/Admin/Dashboard" title="Admin Dashboard">
                            <span style="font-size: 1rem;">
                                <i class="fas fa-tools"></i>
                            </span>
                            Admin Dashboard
                        </a>
                    }
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                        <button id="logout" type="submit" title="Logout" class="dropdown-item text-dark">
                            <span style="font-size: 1rem;">
                                <i class="fas fa-sign-out-alt"></i>
                            </span>
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
