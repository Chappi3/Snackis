@page
@model SnackisWebApp.Pages.Admin.Management.ManageUserRolesModel
@{
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @Model.Username.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.ManageUserWithRolesList.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.ManageUserWithRolesList[i].RoleId" />
                    <input type="hidden" asp-for="@Model.ManageUserWithRolesList[i].RoleName" />
                    <input asp-for="@Model.ManageUserWithRolesList[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.ManageUserWithRolesList[i].Selected">
                        @Model.ManageUserWithRolesList[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-page="UserRolesManager"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>