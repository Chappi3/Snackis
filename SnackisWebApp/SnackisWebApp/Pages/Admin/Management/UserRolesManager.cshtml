@page
@model SnackisWebApp.Pages.Admin.Management.UserRolesManagerModel
@{
    ViewData["Title"] = "User Manager";
}

<h1>User Roles</h1>
<table class="table table-striped">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.UserRolesList)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                <div class="row">
                    <a class="btn btn-primary mx-2" asp-page="ManageUserRoles" asp-route-userId="@user.UserId">Manage Roles</a>
                    <form method="post">
                        <input type="hidden" asp-for="DeleteUserId" value="@user.UserId" />
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>