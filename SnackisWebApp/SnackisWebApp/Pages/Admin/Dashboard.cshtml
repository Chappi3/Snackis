@page
@model SnackisWebApp.Pages.Admin.DashboardModel
@{
}

<div class="container align-content-center shadow my-2 pb-4">
    <p class="display-2 text-center">Admin Dashboard</p>
</div>

<div class="container align-content-center shadow my-2 pb-4">
    <p class="display-3 text-center text-primary pb-2">Management</p>
    <hr class="alert-primary" />
    <div class="row justify-content-center">
        <div class="col-md-3">
            <a class="btn btn-block btn-lg border border-primary rounded" asp-page="/Admin/Management/UserRolesManager">
                <span style="font-size: 8rem;">
                    <i class="fas fa-address-book text-primary"></i>
                </span>
                <p style="font-size: 2rem;">User</p>
                <p style="font-size: 2rem;">Manager</p>
            </a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-block btn-lg border border-primary rounded" asp-page="/Admin/Management/RoleManager">
                <span style="font-size: 8rem;">
                    <i class="fas fa-id-card text-primary"></i>
                </span>
                <p style="font-size: 2rem;">Role</p>
                <p style="font-size: 2rem;">Manager</p>
            </a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-block btn-lg border border-primary rounded" asp-page="/Admin/Management/CategoryManager">
                <span style="font-size: 8rem;">
                    <i class="fas fa-layer-group text-primary"></i>
                </span>
                <p style="font-size: 2rem;">Category</p>
                <p style="font-size: 2rem;">Manager</p>
            </a>
        </div>
    </div>
</div>

<div class="container align-content-center shadow my-2 pb-4">
    <p class="display-3 text-center text-warning pb-2">Reports</p>
    <hr class=" alert-warning" />
    <div class="row justify-content-center pb-4">
        <div class="col-md-3">
            <a class="btn btn-block btn-lg border border-warning rounded" asp-page="/Admin/Reports/ReportsPage">
                <span style="font-size: 8rem;">
                    <i class="fas fa-exclamation-triangle text-warning"></i>
                </span>
                <p style="font-size: 2rem;">Reports list</p>
            </a>
        </div>
    </div>
</div>
