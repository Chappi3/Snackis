@page
@model SnackisWebApp.Pages.SubCategoryModel
@{
    ViewData["Title"] = Model.SubCategory.Name;
}

<h1>@Model.SubCategory.Name</h1>
@if (Model.UserId != null)
{
    <form method="post" asp-page-handler="AddPost">
        <input type="hidden" asp-for="Input.UserId" value="@Model.UserId" />
        <input type="hidden" asp-for="Input.SubCategoryId" value="@Model.SubCategory.Id" />
        <div class="form-group">
            <label class="control-label" asp-for="Input.Title"></label>
            <input asp-for="Input.Title" class="form-control">
        </div>
        <div class="form-group my-2">
            <label class="control-label" asp-for="Input.Content"></label>
            <textarea asp-for="Input.Content" class="form-control"></textarea>
        </div>
        <div class="input-group-btn">
            <button class="btn btn-info">Add New Post</button>
        </div>
    </form>
}
else
{
    <p>Please <a asp-area="Identity" asp-page="Account/Login">login</a> to create a post!</p>
}

<hr class="m-2" />

<h3>Posts</h3>

@if (Model.Posts.Count == 0)
{
    <p>Oh such empty!</p>
}
else
{
    @foreach (var post in Model.Posts.OrderBy(p => p.CreatedAt))
    {

        <div class="row text-center">

            <div class="col-10 border border-dark bg-light my-1">
                @if (post.CreatedByUser != null)
                {
                    <div class="row my-2">
                        <div class="col-4 align-content-center">
                            <p>Created by: @post.CreatedByUser.UserName</p>
                            <p>@post.CreatedAt</p>
                        </div>

                        <div class="col-6 align-content-center">
                            <a class="text-center" asp-page="PostPage" asp-route-postId="@post.Id">
                                <h5>@post.Title</h5>
                            </a>
                        </div>
                        <div class="col-2 align-content-center">
                            @if (Model.UserId == post.CreatedByUser.Id || Model.User.IsInRole("Admin"))
                            {
                                <form method="post" asp-page-handler="DeletePost">
                                    <input type="hidden" asp-for="SubCategory.Id" value="@Model.SubCategory.Id" />
                                    <input type="hidden" asp-for="PostId" value="@post.Id" />
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="row my-2">
                        <div class="col-4 align-content-center">
                            <p>Created by: Deleted user</p>
                            <p>@post.CreatedAt</p>
                        </div>

                        <div class="col-6 align-content-center">
                            <a class="text-center" asp-page="PostPage" asp-route-postId="@post.Id">
                                <h5>@post.Title</h5>
                            </a>
                        </div>
                        <div class="col-2 align-content-center">
                            @if (Model.User.IsInRole("Admin"))
                            {
                                <form method="post" asp-page-handler="DeletePost">
                                    <input type="hidden" asp-for="SubCategory.Id" value="@Model.SubCategory.Id" />
                                    <input type="hidden" asp-for="PostId" value="@post.Id" />
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>

        </div>

    }
}
