@page
@model SnackisWebApp.Pages.SubCategoryModel
@{
    ViewData["Title"] = "Subcategory";
}

<h1>Subcategory</h1>
<form method="post" asp-page-handler="AddPost">
    <div class="input-group">
        <input type="hidden" asp-for="Input.SubCategoryId" value="@Model.SubCategory.Id" />
        <input asp-for="Input.Name" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Post</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts.Where(p => p.subCategoryId == Model.SubCategory.Id).OrderBy(p => p.Name))
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Name</td>
                <td>
                    <form method="post" asp-page-handler="DeletePost">
                        <input type="hidden" asp-for="post.Id" value="@Model.post.Id" />
